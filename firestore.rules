rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;

      match /following/{targetUid} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /followers/{followerUid} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /hiddenPosts/{postId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /comments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;

      match /replies/{replyId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }

    match /matches/{matchId} {
      allow read: if true;
      allow write: if request.auth != null;

      match /liveRooms/{roomId} {
        allow read: if true;
        allow write: if request.auth != null;

        match /chat/{messageId} {
          allow read: if true;
          allow write: if request.auth != null;
        }

        match /viewers/{userId} {
          allow read: if true;
          allow write: if request.auth != null;
        }

        match /requestedViewers/{userId} {
          allow read: if true;
          allow write: if request.auth != null && request.auth.uid == userId;
        }

        match /calleeCandidates/{viewerId}/candidates/{candidateId} {
          allow read: if true;
          allow write: if request.auth != null;
        }

        match /callerCandidates/{viewerId}/candidates/{candidateId} {
          allow read: if true;
          allow write: if request.auth != null;
        }

        match /answers/{viewerId} {
          allow read: if true;
          allow write: if request.auth != null;
        }
      }
    }

    // ✅ fallback rule (모든 경로에 적용)
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
